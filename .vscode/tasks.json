{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Serilog.Sinks.Xunit.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/test/Serilog.Sinks.Xunit.UnitTests/Serilog.Sinks.Xunit.UnitTests.csproj",
                "--logger:\"console;verbosity=detailed\""
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "coverage",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/test/Serilog.Sinks.Xunit.UnitTests/Serilog.Sinks.Xunit.UnitTests.csproj",
                "--logger:\"console;verbosity=detailed\"",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=\"opencover,lcov\"",
                "/p:CoverletOutput=${workspaceFolder}/coverage/lcov"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}