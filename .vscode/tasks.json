{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Serilog.Sinks.Xunit.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/test/Serilog.Sinks.Xunit.UnitTests/Serilog.Sinks.Xunit.UnitTests.csproj",
                "--logger:\"console;verbosity=detailed\""
            ],
            "group":{
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "coverage",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/test/Serilog.Sinks.Xunit.UnitTests/Serilog.Sinks.Xunit.UnitTests.csproj",
                "--logger:\"console;verbosity=detailed\"",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=\"opencover,lcov\"",
                "/p:CoverletOutput=${workspaceFolder}/coverage/lcov"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "sonar-begin",
            "command": "dotnet",
            "type": "process",
            "args": [
                "sonarscanner",
                "begin",
                "/k:Serilog.Sinks.Xunit",
                "/d:sonar.host.url=${input:sonar-url}",
                "/d:sonar.login=${input:sonar-token}",
                "/d:sonar.cs.opencover.reportsPaths=\"${workspaceFolder}/coverage/lcov.opencover.xml\"",
                "/d:sonar.coverage.exclusions=\"**Test*.cs\""
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "sonar-end",
            "command": "dotnet",
            "type": "process",
            "args": [
                "sonarscanner",
                "end",
                "/d:sonar.login=${input:sonar-token}"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "sonar",
            "command": "echo",
            "type": "shell",
            "args": [
                "SonarQube executed"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "coverage",
                "sonar-begin",
                "build",
                "sonar-end"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pack",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/src/Serilog.Sinks.Xunit/Serilog.Sinks.Xunit.csproj",
                "-c",
                "release"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "sonar-url",
            "description": "SonarQube URL:",
            "default": "http://localhost:9000",
            "type": "promptString"
        },
        {
            "id": "sonar-token",
            "description": "SonarQube Token:",
            "default": "",
            "type": "promptString"
        }
    ]
}